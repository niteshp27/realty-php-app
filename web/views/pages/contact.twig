{% extends 'layout.twig' %}

{% if form is defined %}
	{% form_theme form 'form/fields.twig' %}
 {% endif %}

{% block content %}
<div class="contact-form">
<div class="container">
	
	<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12  wow animated zoomIn">
			{% if sent %}
                <div class="text-center">
                    <img class="img-responsive centerBlock" src="{{ asset('images/sai-prasad-nivara-logo.jpg') }}" >

                    <h1>1 BHK flats (555 Sq ft) available at Shirdi</h1>
                    <p>A Project by Soham Properties, located at 5 minutes (2.5 Kms) distance from the Shirdi Sai Baba Temple.</p>     
                    <div class="alert alert-info text-center">
                         <p>Thank you for getting in touch. If a response is required we will get back to you as soon as we can.</p>
                    </div>
                </div>
			{% else %}
                    
			     <h1>Contact Us</h1>
                <p>Contact us using the form below and we'll get back in touch with you.</p>
                <div class="row">
				    <div class="col-md-7 col-sm-12 col-lg-5">
                                                
			             {{ form(form, {'action': path('contact'), 'method': 'POST'}) }}
                    </div>
                    <div class="col-md-5 col-sm-12 col-lg-7">
                        <img class="img-responsive locationImg" src="{{ asset('images/location_map.jpg') }}" >
			             
                    </div>
	           </div>
                    
			{% endif %}
		</div>
	</div>
    
    
    
    
    
    
    
    
</div></div>



    {% if sent %}

    {% else %}
        <div class="mapBlock  wow animated fadeIn">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23401.234687587832!2d74.48965728822535!3d19.77287077143343!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTnCsDQ2JzI0LjkiTiA3NMKwMzAnMzkuMCJF!5e0!3m2!1sen!2s!4v1453224249232" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>

                    </div>

                </div>
            </div>
        </div>
    {% endif %}



{% endblock %}