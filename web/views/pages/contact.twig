{% extends 'layout.twig' %}

{% if form is defined %}
	{% form_theme form 'form/fields.twig' %}
 {% endif %}

{% block content %}
<div class="jumbotron contact-form">
<div class="container">
	
	<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
			{% if sent %}
                <div class="text-center">
                    <img src="{{ asset('images/sai-prasad-nivara-logo.jpg') }}" >

                    <h1>1 BHK flats (555 Sq ft) available at Shirdi</h1>
                    <p>A Project by Soham Properties, located at 5 minutes (2.5 Kms) distance from the Shirdi Sai Baba Temple.</p>     
                    <div class="alert alert-info text-center">
                         <p>Thank you for getting in touch. If a response is required we will get back to you as soon as we can.</p>
                    </div>
                </div>
			{% else %}
                    
			<h1>Contact Us</h1>
                <p>Contact us using the form below and we'll get back in touch with you.</p>
                <div class="row">
				    <div class="col-md-6 col-sm-8 col-xs-10">
                        <div class="alert alert-info text-center" role="alert">
                        {{ errorCapcha}}
                        </div>
			             {{ form(form, {'action': path('contact'), 'method': 'POST'}) }}
                    </div>
	           </div>
			{% endif %}
		</div>
	</div>
</div></div>
{% endblock %}